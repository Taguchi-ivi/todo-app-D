%h2.page-title= @board.title
- @tasks.each do |task|
  = link_to board_task_path(board_id: @board.id, id: task.id) do
    .layout-item
      - if task.eyecatch.attached?
        .layout-item-img= image_tag task.eyecatch
      .layout-item-wrapper
        .layout-item-left
          %p= task.title
      .layout-item-content
        %p= task.content
      .layout-item-wrapper
        .layout-item-avatar= image_tag task.user.avatar_image
        .layout-item-count
          %span.layout-item-count-num= task.comments.count
          %span.layout-item-count-img= image_tag 'message-square-outline.png'
= link_to new_board_task_path(@board), class: 'layout-new' do
  .layout-new-content + Add new Card
