%h2.card-title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, class: 'text', autofocus: true, autocomplete: "email"
  .field_min
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, class: 'text', autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, class: 'text', autocomplete: "new-password"
  .actions.btn-wrap
    = f.submit "Submit",class: 'btn-primary'
